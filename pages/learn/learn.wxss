/**index.wxss**/
page{
  height: 100%;
}
video{
  display: block;
}
.container{
  height: 100%;
  width:100%;
  position: relative;
}
.videoCont{
  width: 100%;
  height: 420rpx;
  position: relative;
}
.videoCont image{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 50%;
  top: 50%;
  margin-left: -50rpx;
  margin-top: -50rpx;
}
/*video*/
.vp-v{
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.section{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.title{
  font-size: 36rpx;
  color: #78919d;
  line-height: 72rpx;
  width: 100%;
  text-indent: 60rpx;
  border-bottom: 2rpx dashed #ccc;
  position: relative;
}

.unit{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  margin-top: 3rpx;
  display: block;
  position: absolute;
  top: 18rpx;
  left: 12rpx;
}

.class{
  font-size: 32rpx;
  color: #666;
  line-height: 100rpx;
  border-bottom: 2rpx dashed #ccc;
  overflow: hidden;
}

.class text{
  display: block;
  float: left;
}

.name{
  width: 510rpx;
  font-size: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.class.active{
  background-color: #eee;
}

.class.active .name{
  color: #0a5399
}

.type{
  width: 100rpx;
  text-align: center;
  border-radius: 8rpx;
  height: 68rpx;
  color: #fff;
  line-height: 68rpx;
  font-size: 32rpx;
  margin-top: 16rpx;
}

.type.b{
  background-color: orange;
}

.type.x{
  background-color: #777;
}

.option{
  width: 100rpx;
  text-align: right;
}

camera{
  position: absolute;
  top: 0;
}